
<div class="row">
	<div class="col-md-6">
		<h1>Login</h1>
		<% if flash[:error] %>
			<div class="alert-danger"><%= flash[:error] %></div>
		<% end %>
		<%= simple_form_for(:session, url: session_path) do |f| %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.button :submit, 'Login', class: "btn btn-primary" %>
		<% end %>
	</div>
	<div>
		<p>==============================================================================</p>
	</div>
	<div class="col-md-6">
		<h1>Register</h1>
		<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
				<div class="alert-danger"><%= error %></div>
			<% end %>
		<% end %>
		<%= simple_form_for @user, url: users_register_path do |f| %>
			<%= f.input :first_name, required: false %>
			<%= f.input :last_name, required: false %>
			<%= f.input :email, required: false %>
			<%= f.input :city, required: false %>
			<%= f.input :state, :label => "State", :collection => us_states, :selected => "", required: false %>
			<%= f.input :password, required: false %>
			<%= f.button :submit, 'Register', class: "btn btn-primary" %>
		<% end %>
	
	</div>
</div>